{
   "extends": [
      "next/core-web-vitals",
      "next/typescript",
      "plugin:@typescript-eslint/recommended",
      "prettier"
   ],
   "plugins": ["prettier", "@typescript-eslint"],
   "rules": {
      "@typescript-eslint/no-explicit-any": "warn",
      "@typescript-eslint/no-unused-vars": "warn",
      "no-unused-vars": "warn",
      "react/prop-types": "off",
      "prettier/prettier": [
         "warn",
         {
            "arrowParens": "always",
            "semi": false,
            "trailingComma": "none",
            "tabWidth": 2,
            "endOfLine": "auto",
            "useTabs": false,
            "singleQuote": false,
            "printWidth": 120,
            "jsxSingleQuote": true
         }
      ]
   },
   "settings": {
      "react": {
         "version": "detect"
      }
   }
}
